                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="+2.421"
                        android:maxLines="1"
                        style="@style/SmallLabelHint2"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cases"
                        style="@style/SmallLabelWhite"/>
                </LinearLayout>
                <androidx.legacy.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
                <LinearLayout
                    android:id="@+id/ll_green2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_green"
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:elevation="20dp">
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/num_green3"
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="112.412"
                        android:maxLines="1"
                        style="@style/BigLabelWhite"/>
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/num_green4"
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="+747"
                        android:maxLines="1"
                        style="@style/SmallLabelHint2"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/recovered"
                        style="@style/SmallLabelWhite"/>
                </LinearLayout>
                <androidx.legacy.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
                <LinearLayout
                    android:id="@+id/ll_red2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_red"
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:elevation="20dp">
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/num_red3"
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="112.412"
                        android:maxLines="1"
                        style="@style/BigLabelWhite"/>
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/num_red4"
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="+23"
                        android:maxLines="1"
                        style="@style/SmallLabelHint2"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/deaths"
                        style="@style/SmallLabelWhite"/>
                </LinearLayout>
            </LinearLayout>
            <me.grantland.widget.AutofitTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@string/more_info"
                android:textAlignment="viewEnd"
                style="@style/SmallLabelHint"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                autofit:cardCornerRadius="10dp"
                android:elevation="15dp"
                autofit:cardElevation="15dp"
                android:background="@color/transparent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/transparent">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/hintBlack"
                        android:src="@drawable/ic_add_circle_outline_black_24dp"
                        android:alpha="1"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/ll_total"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical|end"
                        android:layout_weight="2"
                        android:clipToPadding="false"
                        android:clipChildren="false">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/cases"
                            style="@style/SmallLabelHint"/>
                    </LinearLayout>
                    <androidx.legacy.widget.Space
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="5.140.124"
                        style="@style/BodyWhite"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical|end"
                        android:layout_weight="2"
                        android:clipToPadding="false"
                        android:clipChildren="false">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:textAlignment="viewEnd"
                            android:text="@string/recovered"
                            style="@style/SmallLabelHint"/>
                    </LinearLayout>
                    <androidx.legacy.widget.Space
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="3.124.147"
                        style="@style/BodyWhite"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical|end"
                        android:layout_weight="2"
                        android:clipToPadding="false"
                        android:clipChildren="false">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/deaths"
                            style="@style/SmallLabelHint"/>
                    </LinearLayout>
                    <androidx.legacy.widget.Space
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="440.141"
                        style="@style/BodyWhite"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/latest_news"
                style="@style/SubTitle"
                android:layout_marginTop="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:clipChildren="false"
                android:clipToPadding="false">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="@drawable/gradient_transparent2"
                    android:translationZ="10dp"/>
                <com.chauthai.overscroll.RecyclerViewBouncy
                    android:id="@+id/rv_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="50dp"
                    android:paddingStart="20dp"
                    android:clipToPadding="false"
                    android:clipChildren="false"/>
            </RelativeLayout>
