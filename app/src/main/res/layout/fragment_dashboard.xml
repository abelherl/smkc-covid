<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardFragment"
    android:background="?onAccent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:padding="20dp"
        android:clipChildren="false"
        android:clipToPadding="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dashboard"
                style="@style/Title"
                android:layout_marginTop="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/gradient"
                android:gravity="bottom"
                android:elevation="20dp">
                <ImageButton
                    android:id="@+id/bt_what"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_art2"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:alpha="0.6"
                    android:background="?selectableItemBackground"
                    android:backgroundTint="@color/green"
                    android:adjustViewBounds="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/gradient_transparent"
                    android:backgroundTint="?primaryColor"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/what_is_covid"
                        style="@style/SubTitle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/learn"
                        style="@style/BodyWhiteSmall"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/tv_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/global"
                    style="@style/SubTitle"
                    android:layout_centerVertical="true"/>
                <ImageButton
                    android:id="@+id/bt_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_swap_horiz_white_24dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:clipToPadding="false"
                android:clipChildren="false">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_blue"
                    android:padding="15dp"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:elevation="20dp">
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/num_blue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="112.412"
                        android:maxLines="1"
                        style="@style/BigLabelWhite"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/num_blue"
                        android:text="@string/cases"
                        style="@style/SmallLabelWhite"/>
                </RelativeLayout>
                <androidx.legacy.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_green"
                    android:padding="15dp"
                    android:elevation="20dp">
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/num_green"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="78.295"
                        android:maxLines="1"
                        style="@style/BigLabelWhite"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/num_green"
                        style="@style/SmallLabelWhite"
                        android:text="@string/recovered"/>
                </RelativeLayout>
                <androidx.legacy.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_red"
                    android:padding="15dp"
                    android:elevation="20dp">
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/num_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="6.154"
                        android:maxLines="1"
                        style="@style/BigLabelWhite"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/num_red"
                        style="@style/SmallLabelWhite"
                        android:text="@string/deaths"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical|end"
                        android:layout_weight="2"
                        android:clipToPadding="false"
                        android:clipChildren="false">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/total_cases"
                            style="@style/SmallLabelHint"/>
                    </LinearLayout>
                    <androidx.legacy.widget.Space
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="5.140.124"
                        style="@style/BodyWhite"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical|end"
                        android:layout_weight="2"
                        android:clipToPadding="false"
                        android:clipChildren="false">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:textAlignment="viewEnd"
                            android:text="@string/total_recovered"
                            style="@style/SmallLabelHint"/>
                    </LinearLayout>
                    <androidx.legacy.widget.Space
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="3.124.147"
                        style="@style/BodyWhite"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical|end"
                        android:layout_weight="2"
                        android:clipToPadding="false"
                        android:clipChildren="false">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/total_deaths"
                            style="@style/SmallLabelHint"/>
                    </LinearLayout>
                    <androidx.legacy.widget.Space
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="440.141"
                        style="@style/BodyWhite"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/latest_news"
                style="@style/SubTitle"
                android:layout_marginTop="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-20dp"
                android:layout_marginEnd="-20dp"
                android:clipChildren="false"
                android:clipToPadding="false">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="@drawable/gradient_transparent2"
                    android:translationZ="10dp"/>
                <com.chauthai.overscroll.RecyclerViewBouncy
                    android:id="@+id/rv_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="50dp"
                    android:paddingStart="20dp"
                    android:clipToPadding="false"
                    android:clipChildren="false"/>
            </RelativeLayout>
<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:id="@+id/rv_main"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content" />-->
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>