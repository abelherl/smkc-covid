<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MapsActivity">
    <RelativeLayout
        android:id="@+id/sp_maps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:layout_marginTop="80dp">
        <com.github.ybq.android.spinkit.SpinKitView
            style="@style/SpinKitView.Large.MultiplePulse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            app:SpinKit_Color="@color/lightBlue"
            android:clickable="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_maps"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="top|center_horizontal"
        android:elevation="10dp"
        android:background="?primaryColor"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:translationZ="10dp"
        android:paddingTop="35dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp">
        <ImageButton
            android:id="@+id/bt_back_maps"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="0dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_close_black_24dp"
            android:scaleType="fitCenter"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <SearchView
            android:id="@+id/sv_maps"
            android:layout_toEndOf="@id/bt_back_maps"
            android:layout_toStartOf="@id/bt_search_maps"
            android:layout_alignTop="@id/bt_back_maps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="@string/search"/>
        <ImageButton
            android:id="@+id/bt_search_maps"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_search_black_24dp"
            android:scaleX="0.9"
            android:scaleY="0.9"
            style="@style/Widget.AppCompat.Button.Borderless"/>
    </RelativeLayout>
    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_maps"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>
</RelativeLayout>