<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="15dp">
    <androidx.cardview.widget.CardView
        android:layout_width="420dp"
        android:layout_height="90dp"
        app:cardCornerRadius="10dp"
        android:elevation="15dp"
        android:clipChildren="true"
        android:clipToPadding="true">
        <RelativeLayout
            android:id="@+id/rl_rank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_orange">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="-5dp"
                android:src="@drawable/bg_rank"
                android:adjustViewBounds="false"
                android:scaleType="fitStart"
                android:alpha="0.6"/>
            <me.grantland.widget.AutofitTextView
                android:id="@+id/tv_rank_rank"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rounded"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="-10dp"
                android:backgroundTint="#00000000"
                android:gravity="center"
                android:text="3"
                android:maxLines="1"
                style="@style/BigLabelWhite"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
            <LinearLayout
                android:id="@+id/ll_rank"
                android:layout_toEndOf="@id/tv_rank_rank"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingEnd="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:padding="1dp"
                    app:cardBackgroundColor="@color/white">
                    <ImageView
                        android:id="@+id/iv_rank"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="false"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_rank_name"
                    style="@style/BodyWhiteBold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:text="Country name" />
            </LinearLayout>
            <me.grantland.widget.AutofitTextView
                android:id="@+id/tv_rank_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                style="@style/Title"
                android:layout_toEndOf="@id/tv_rank_rank"
                android:paddingBottom="12dp"
                android:text="0 cases"
                android:paddingEnd="20dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>