<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment1"
    android:paddingTop="40dp"
    android:paddingStart="25dp"
    android:paddingEnd="25dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:layout_centerInParent="true">
    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/sk_detail1"
        style="@style/SpinKitView.Large.MultiplePulse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        app:SpinKit_Color="@color/white"
        android:translationZ="10dp"/>
    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:id="@+id/rl_detail1"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:clipChildren="true"
            android:clipToPadding="true"
            android:background="@drawable/rounded"
            android:backgroundTint="?onAccent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false"
                android:background="@drawable/bg_what"
                android:scaleY="2"
                android:alpha="0.6"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                android:clipToPadding="false"
                android:clipChildren="false">
                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_detail_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Title"
                    android:text="@string/global"
                    android:layout_marginBottom="10dp"/>
                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_detail_total1"
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-5dp"
                    android:singleLine="true"
                    android:text="0"
                    android:maxLines="1"
                    style="@style/HugeLabelWhite"/>
                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_detail_sub1"
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="+0"
                    android:maxLines="1"
                    style="@style/SmallLabelHint2"
                    android:layout_marginBottom="5dp"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/ch_detail1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_date_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    style="@style/BodyWhiteBold"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>