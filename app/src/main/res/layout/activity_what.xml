<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WhatActivity"
    android:paddingTop="40dp"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    android:paddingBottom="30dp"
    android:background="?onAccent"
    android:clipChildren="false"
    android:clipToPadding="false">
    <ScrollView
        android:id="@+id/sv_what"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:scrollIndicators="none"
        android:elevation="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="true"
            android:clipChildren="true"
            android:background="@drawable/gradient">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/bg_what"
                android:scaleType="fitXY"
                android:alpha="0.4"
                android:adjustViewBounds="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:clipToPadding="true"
                android:clipChildren="true">
                <ImageButton
                    android:id="@+id/bt_back"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:background="@color/transparent"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            style="@style/SubTitle"
                            android:text="@string/what_is_covid"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/BodyWhite"
                            android:text="@string/what2"/>
                    </LinearLayout>
                </RelativeLayout>
<!--                <ImageView-->
<!--                    android:id="@+id/iv_wash"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="190dp"-->
<!--                    android:scaleType="fitXY"-->
<!--                    android:adjustViewBounds="true"-->
<!--                    android:src="@drawable/ic_wash"/>-->
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>