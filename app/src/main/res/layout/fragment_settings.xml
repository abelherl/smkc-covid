<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardFragment"
    android:background="?attr/onAccent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:padding="20dp"
        android:clipChildren="false"
        android:clipToPadding="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                style="@style/Title"
                android:layout_marginTop="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:backgroundTint="?attr/onAccent"
                android:elevation="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account"
                    style="@style/SmallLabelHint"/>
                <RelativeLayout
                    android:id="@+id/rl_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_account_settings"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:civ_circle_background_color="@color/lightBlue"
                        android:src="@drawable/ic_account_circle_black_24dp" />
                    <RelativeLayout
                        android:id="@+id/rl_sign_in"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_alignStart="@id/tv_name_settings"
                        android:visibility="visible">
                        <Button
                            android:id="@+id/bt_sign_in"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            style="?borderlessButtonStyle"
                            android:background="@color/transparent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/sign_in"
                            android:gravity="center_vertical"
                            android:textSize="16sp"
                            android:textColor="@color/lightBlue"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tv_name_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iv_account_settings"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="15dp"
                        android:text="Abel Herlambang"
                        style="@style/BodyWhiteBold"
                        android:visibility="invisible"/>
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tv_email_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/tv_name_settings"
                        android:layout_below="@id/tv_name_settings"
                        android:text="abangabel02@gmail.com"
                        style="@style/BodyWhiteSmall"
                        android:alpha="0.7"
                        android:visibility="gone"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/general"
                    style="@style/SmallLabelHint"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp">
                    <Button
                        android:id="@+id/bt_language"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        style="?borderlessButtonStyle"
                        android:background="@color/transparent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/language"
                        android:gravity="center_vertical"
                        style="@style/BodyWhite"/>
                    <ImageButton
                        android:id="@+id/ib_language"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@drawable/usa"
                        android:background="#00000000"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=">"
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        style="@style/BodyWhite"/>
                </RelativeLayout>
                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/notification"
                    style="@style/BodyWhite"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:id="@+id/ll_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/notification"
                        style="@style/SmallLabelHint"/>
                    <Switch
                        android:id="@+id/switch_global"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/global"
                        style="@style/BodyWhite"
                        android:layout_marginTop="10dp"/>
                    <Switch
                        android:id="@+id/switch_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/country"
                        style="@style/BodyWhite"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_sign_out"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible">
                    <Button
                        android:id="@+id/bt_sign_out"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        style="?borderlessButtonStyle"
                        android:background="@color/transparent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/sign_out"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:textColor="@color/lightRed"
                        android:textStyle="bold"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/dashboard"
                    style="@style/SmallLabelHint"
                    android:layout_marginTop="20dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp">
                    <Button
                        android:id="@+id/bt_country"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        style="?borderlessButtonStyle"
                        android:background="@color/transparent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/country"
                        android:gravity="center_vertical"
                        style="@style/BodyWhite"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:background="#00000000"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=">"
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        style="@style/BodyWhite"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>